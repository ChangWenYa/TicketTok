    <script>

        // 發文規則 => 浮動式窗

        $(document).ready(function () {
            $(".post-rules").click(function () {
                $(".rules-card").slideDown(300);
                $(".card-bg").show();
            });

            $(".accept").click(function () {
                $(".rules-card").hide();
                $(".card-bg").hide();
            });
        });

        // 取得下拉式選單的值，並顯示在 textbox 上

        $('#artCategory').change(function () {
            $('#artCat').val($('#artCategory option:selected').data('id'));
        })


    </script>



}


