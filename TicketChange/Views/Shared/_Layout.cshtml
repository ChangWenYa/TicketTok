<!DOCTYPE html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/img/tickettok_icon.png" type="image/x-icon" />
    <title>@ViewBag.Title - @ViewBag.websiteName</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">

    <link rel="stylesheet" href="~/Content/maicons.css">

    <link rel="stylesheet" href="~/Scripts/vendor/animate/animate.css">

    <link rel="stylesheet" href="~/Scripts/vendor/owl-carousel/css/owl.carousel.css">

    <link rel="stylesheet" href="~/Scripts/vendor/fancybox/css/jquery.fancybox.css">

    <link rel="stylesheet" href="~/Content/theme.css">

    @RenderSection("css", required: false)
</head>
<body>
    <!-- Back to top button -->
    <div class="back-to-top"></div>

    <header>
        <div style="height:70px" id="填充header" />
        <div class="fixed-top">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="width: 80%;position: absolute;">
                <div class="container">
                    <img src="~/img/tickettok_icon.png" width="50" height="50" />
                    <a href="@Url.Action("index", "Home")" class="navbar-brand">Ticket<span class="text-primary">Tok!</span></a>

                    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarContent">
                        <ul class="navbar-nav ml-auto pt-3 pt-lg-0">
                            <li>
                                <form class="form-inline" action="/Home/Concert">
                                    <input name="searchString" class="form-control mr-sm-3" type="search" placeholder="請輸入搜尋..." aria-label="Search">
                                    <button class="btn btn-outline-warning my-2 my-sm-1" type="submit">查詢</button>
                                </form>
                            </li>
                            <li class="nav-item active">
                                <a href="@Url.Action("index", "Home")" class="nav-link">首頁</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("About_Test", "Home")" class="nav-link">關於我們</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Concert", "Home")" class="nav-link">演唱會</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ArticleList", "Forum")" class="nav-link">討論版</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Calendar", "Home")" class="nav-link">行事曆</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- .container -->
            </nav> <!-- .navbar -->
            @RenderPage("_Account.cshtml")
        </div>
    </header>

    @RenderBody()

  
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 py-3">
                    <h3>Ticket<span class="fg-primary">Tok!</span></h3>
                </div>
                <div class="col-lg-3 py-3">
                    <h5>聯絡資訊</h5>
                    <p>台中市公益路二段51號18樓</p>
                    <p>Email: example@mail.com</p>
                    <p>Phone: 0912-345-678</p>
                </div>

                <div class="col-lg-3 py-3">
                    <h5>認識TicketTok!</h5>
                    <ul class="footer-menu">
                        <li><a href="#">常見問題</a></li>
                        <li><a href="#">隱私權政策</a></li>
                        <li><a href="#">服務條款</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 py-3">
                    <h5>訂閱電子報</h5>
                    <form action="#">
                        <input type="text" class="form-control" placeholder="請輸入你的email">
                        <button type="submit" class="btn btn-primary btn-sm mt-2">提交</button>
                    </form>
                </div>
            </div>

            <hr>

            <div class="row mt-4">
                <div class="col-md-6">
                    <p>Copyright 2020. This template designed by <a href="https://macodeid.com">MACode ID</a></p>
                </div>
                <div class="col-md-6 text-right">
                    <div class="sosmed-button">
                        <a href="#"><span class="mai-logo-facebook-f"></span></a>
                        <a href="#"><span class="mai-logo-twitter"></span></a>
                        <a href="#"><span class="mai-logo-youtube"></span></a>
                        <a href="#"><span class="mai-logo-linkedin"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>

    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/vendor/owl-carousel/js/owl.carousel.min.js"></script>

    <script src="~/Scripts/vendor/wow/wow.min.js"></script>

    <script src="~/Scripts/vendor/fancybox/js/jquery.fancybox.min.js"></script>

    <script src="~/Scripts/vendor/isotope/isotope.pkgd.min.js"></script>

    <script src="~/Scripts/js/google-maps.js"></script>

    <script src="~/Scripts/js/theme.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        $("#searchText").on("click", function () {
            $("#searchText").val("");
            $("#searchText").prop("style", "color:black");
        })
        $("#searchText").on("focusout", function () {
            $("#searchText").val("請輸入搜尋...");
        })
        $("#searchText").on("click", function () {
            console.log($("#test").width());
            console.log($("#test").height());
        })
    </script>


</body>
